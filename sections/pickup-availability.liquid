{%- if section.settings.custom_padding -%}
	<style>
		#shopify-section-{{ section.id }} {
			padding-top: {{ section.settings.padding_top }}px;
			padding-bottom: {{ section.settings.padding_bottom }}px;
		}
	</style>
{%- endif -%}

{%- render 'pickup-availability', product_variant: product_variant -%}

{% schema %}
{
	"name": "Store pickup availability",
	"class": "shopify-section--pickup-availability",
	"tag": "aside",
	"settings": [
		{
			"type": "checkbox",
			"id": "custom_padding",
			"label": "Custom padding",
			"default": false
		},
		{
			"type": "range",
			"id": "padding_top",
			"label": "Top padding",
			"min": 0,
			"max": 200,
			"step": 4,
			"default": 40,
			"unit": "px"
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"label": "Bottom padding",
			"min": 0,
			"max": 200,
			"step": 4,
			"default": 40,
			"unit": "px"
		}
	]
}
{% endschema %}
